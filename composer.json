{
  "name": "axis/axis-twig-plugin",
  "description": "symfony 1.x plugin that integrates twig templating engine to be used with symfony.",

  "type": "symfony1-plugin",
  "extra": {
    "installer-name": "AxisTwigPlugin"
  },

  "keywords": ["symfony", "twig", "templating"],
  "license": "MIT",
  "homepage": "https://github.com/e1himself/axis-twig-plugin",

  "authors": [
    {
      "name": "Ivan Voskoboynyk",
      "email": "ioann.voskoboynyk@gmail.com",
      "homepage": "https://github.com/e1himself"
    }
  ],

  "autoload": {
    "psr-0": {
      "Axis\\S1\\Twig": "lib/"
    }
  },

  "require": {
    "php": ">=5.3.0",
    "composer/installers": "*",
    "symfony/class-loader": "2.2.x-dev",
    "twig/twig": "dev-master",
    "axis/axis-service-container-plugin": "dev-master"
  }
}